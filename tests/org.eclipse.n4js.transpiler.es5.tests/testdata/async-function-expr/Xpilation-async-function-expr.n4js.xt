function echo(msg : string) : Promise<string,string> {
	return new Promise<string,string>(function(resolve : {function(string)}, reject : {function(string)}) {
		// do a thing, possibly async, then ...
		resolve("stuff worked: \""+msg+"\"");
	});
}


