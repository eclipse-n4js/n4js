////////////////////////////////
// With and without the @Spec //
////////////////////////////////


class AX {
	public x : number;
	public constructor (@Spec spec : ~i~this) {}
}

class BX extends AX {
	public y : number;
	public constructor (spec : ~~this) {
		super(spec);
	}
}

class CX extends BX {
	public z : string;
	public constructor (@Spec spec : ~i~this) {
		// XPECT errors --> "~i~this[CX] is not a structural subtype of ~~this[BX]: x failed: writable field requires a getter/setter pair in subtype. and 1 more problems." at "spec"
		super(spec);
	}
}

class A {
	public x : number;
	public constructor (@Spec spec : ~i~this) {}
}

class B extends A {
	public y : number;
	public constructor (@Spec spec : ~i~this) {
		super(spec);
	}
}

class C extends B {
	public z : string;
	public constructor (@Spec spec : ~i~this) {
		super(spec);
	}
}

var a : A = new A({x: 1});
var b : B = new B({x: 1, y: 2});
var c : C = new C({x: 1, y: 2, z: "s"});

console.log(a);
console.log(b);
console.log(c);

/* XPECT output ---
A { x: 1 }
B { x: 1, y: 2 }
C { x: 1, y: 2, z: 's' }
--- */
