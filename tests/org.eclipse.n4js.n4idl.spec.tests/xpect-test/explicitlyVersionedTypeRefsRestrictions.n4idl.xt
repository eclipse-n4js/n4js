/* XPECT_SETUP org.eclipse.n4js.n4idl.spec.tests.N4IDLModelVersionTest END_SETUP */

class A#1 {}
class A#2 {}


// In regular function declarations, type versions may not be specified explicitly XPECT errors --> "The explicit declaration of type version requests is only allowed in functions annotated as @Migration." at "#1"
function notAMigration(p : A#1) {}

// In the extends clause, type version may not be specified explicitly XPECT errors --> "The explicit declaration of type version requests is only allowed in functions annotated as @Migration." at "#1" 
class SubClass#1 extends A#1 {
	// In class declarations, type version may not be specified explicitly XPECT errors --> "The explicit declaration of type version requests is only allowed in functions annotated as @Migration." at "#1"
	field : A#1
}

@Migration
function migration(p : A#1) {
	// In migrations, type versions may be specified explicitly XPECT noerrors 
	let a1 = new A#1();
	// In migrations, type versions may be specified explicitly XPECT noerrors
	let a2 = new A#2();
	
	// In migrations, an explicit declaration of type versions is required XPECT errors --> "Failed to infer the context version for A. Please declare an explicit type version." at "A"
	let noVersion = new A();
}