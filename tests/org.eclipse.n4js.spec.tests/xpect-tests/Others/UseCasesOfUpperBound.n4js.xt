/* XPECT_SETUP org.eclipse.n4js.spec.tests.N4JSSpecTest END_SETUP  */


class A {}
var arr : Array<? extends A>;



// global variable

var v01 = arr[0];
// XPECT type of 'v01' --> A
v01;


// local variables

function foo() {
	var v02 = arr[0];
	// XPECT type of 'v02' --> A
	v02;
}

class C03 {
	m() {
		var v03 = arr[0];
		// XPECT type of 'v03' --> A
		v03;
	}
}


// exported variable

export var v04 = arr[0];
// XPECT type of 'v04' --> A
v04;


// variable (in for..of loop)

for(var v99 of arr) {
	// XPECT type of 'v99' --> A
	v99;
}


// field

class C {
	field = arr[0];
	static fieldStatic = arr[0];
}
var c : C;
// XPECT type of 'c.field' --> A
c.field;
// XPECT type of 'C.fieldStatic' --> A
C.fieldStatic;


// property

var ol = {
	prop: arr[0]
}
// XPECT type of 'ol.prop' --> A
ol.prop;


// await

async function fooAsync() {
	var p : Promise<? extends A,any>;
	// XPECT errors --> "? extends A is not a subtype of string." at "await p"
	var test : string = await p;
}
