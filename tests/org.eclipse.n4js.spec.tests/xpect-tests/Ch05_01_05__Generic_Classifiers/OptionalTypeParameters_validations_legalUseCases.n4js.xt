/* XPECT_SETUP org.eclipse.n4js.spec.tests.N4JSSpecTest END_SETUP */


// legal:

// XPECT noerrors -->
class G<T=any> {}

// XPECT noerrors -->
interface I<T=any> {}

// XPECT noerrors -->
type Ali<T=any> = G<T>;


// illegal:

class Cls {
	// XPECT errors --> "Only type parameters of classes, interfaces, and type aliases may be declared optional." at "any"
	<T0=any,T1> method(p0: T0, p1: T1) {}
}

// XPECT errors --> "Only type parameters of classes, interfaces, and type aliases may be declared optional." at "any"
function <T=any> foo(p: T): T {
	return p;
}

// XPECT errors --> "Only type parameters of classes, interfaces, and type aliases may be declared optional." at "any"
let fn: {function<T=any>(p:T):T};

let obj: ~Object with {
	// XPECT errors --> "Only type parameters of classes, interfaces, and type aliases may be declared optional." at "any"
	<T=any> m(p:T):T;
};


// in contrast to the previous two cases, the following is legal:

// XPECT noerrors -->
type AliasFn<T=any> = {function<T>(p:T):T};
// XPECT noerrors -->
type AliasObj<T=any> = ~Object with { <T> m(p:T):T; };
