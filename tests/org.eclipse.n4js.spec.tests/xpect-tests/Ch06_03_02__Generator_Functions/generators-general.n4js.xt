/* XPECT_SETUP org.eclipse.n4js.spec.tests.N4JSSpecTest END_SETUP */


// generator function expression
// XPECT noerrors
let xx = function * () {};
// XPECT noerrors
let axx = async function * () {};


// generator method
class M {
	// XPECT noerrors
	* g0 () {}
}
class AM {
	// XPECT noerrors
	async * ag0 () {}
}


// no return ok
// XPECT noerrors
function * g1() {}
// XPECT noerrors
async function * ag1() {}


// recursive yield type ok
function * g2() {
	// XPECT noerrors
	yield * g1();
}
async function * ag2() {
	// XPECT noerrors
	yield * ag1();
}


// return without expression is ok in shorthand form
function * g40() : int {
	// XPECT noerrors
	return;
}
async function * ag40() : int {
	// XPECT noerrors
	return;
}


// return with expression is ok in shorthand form
function * g41() : int {
	// XPECT noerrors
	return 1;
}
async function * ag41() : int {
	// XPECT noerrors
	return 1;
}


// return without expression is ok when void
function * g42() : void {
	// XPECT noerrors
	yield;
	// XPECT noerrors
	return;
}
async function * ag42() : void {
	// XPECT noerrors
	yield;
	// XPECT noerrors
	return;
}


// return with expression is not ok when void
function * g43() : void {
	// XPECT errors --> "int is not a subtype of undefined." at "1"
	yield 1;
	// XPECT errors --> "int is not a subtype of undefined." at "1"
	return 1;
}
async function * ag43() : void {
	// XPECT errors --> "int is not a subtype of undefined." at "1"
	yield 1;
	// XPECT errors --> "int is not a subtype of undefined." at "1"
	return 1;
}
