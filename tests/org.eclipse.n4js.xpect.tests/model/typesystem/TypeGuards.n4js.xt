/* EXAMPLE 1 */

interface I1 {}
interface J1 extends I1 {}
class C1 implements J1 {}

function foo1() {
	let x: I1 = new C1();
	
	if (x instanceof J1) {
		let y: J1;
		// XPECT type of 'x' --> intersection{I1,J1}
		// XPECT noerrors --> "J1 is not a subtype of J1." at "x"
		y = x;
	}
}


/* EXAMPLE 2 */

class C2 {}
class D2 extends C2 {}

function foo2() {
	let d: D2;
	
	if (d instanceof C2.constructor) {
		let dd: D2;
		// XPECT type of 'd' --> D2
		// XPECT noerrors --> "C2 is not a subtype of D2." at "d"
		dd = d;
	}
}


