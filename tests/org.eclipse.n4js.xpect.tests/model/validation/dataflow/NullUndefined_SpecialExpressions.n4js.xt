/*	XPECT_SETUP org.eclipse.n4js.xpect.tests.N4JSXpectTest 
	IssueConfiguration {
		IssueCode "DFG_NULL_DEREFERENCE" {enabled=true}
	}
	END_SETUP
 */





function condition() : boolean {
	return true;
}


function f1a() {
	let a : int = condition() ? 1 : 2;
	// XPECT nowarnings -->
	a.toString();
}

function f1b() {
	let a : int = condition() ? null : 2;
	// XPECT warnings --> "Variable a may be null" at "a"
	a.toString();
}

function f1c() {
	let a : int = condition() ? 1 : null;
	// XPECT warnings --> "Variable a may be null" at "a"
	a.toString();
}

function f1d() {
	// XPECT warnings --> "The type of this expression is undefined, so it will never evaluate to a value other than undefined." at "condition() ? null : undefined"
	let a : int = condition() ? null : undefined;
	// XPECT warnings --> "Variable a is null or undefined" at "a"
	a.toString();
}



function f2a() {
	let a : int = 0;
	let b : int = a = 1;
	// XPECT nowarnings -->
	a.toString();
	// XPECT nowarnings -->
	b.toString();
}

function f2b() {
	let a : int = undefined;
	let b : int = a = 1;
	// XPECT nowarnings -->
	a.toString();
	// XPECT nowarnings -->
	b.toString();
}

function f2c() {
	let a : int = 0;
	// XPECT warnings --> "The type of this expression is undefined, so it will never evaluate to a value other than undefined." at "a = undefined"
	let b : int = a = undefined;
	// XPECT warnings --> "Variable a is undefined" at "a"
	a.toString();
	// XPECT warnings --> "Variable b is undefined" at "b"
	b.toString();
}



function f3a() {
	let a : int = 0;
	let b : int = a = condition() ? 1 : 2;
	// XPECT nowarnings -->
	a.toString();
	// XPECT nowarnings -->
	b.toString();
}

function f3b() {
	let a : int = 0;
	let b : int = a = condition() ? undefined : 2;
	// XPECT warnings --> "Variable a may be undefined" at "a"
	a.toString();
	// XPECT warnings --> "Variable b may be undefined" at "b"
	b.toString();
}

function f3c() {
	let a : int = 0;
	let b : int = condition() ? a = undefined : 2;
	// XPECT warnings --> "Variable a may be undefined" at "a"
	a.toString();
	// XPECT warnings --> "Variable b may be undefined" at "b"
	b.toString();
}
