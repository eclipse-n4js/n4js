/*	XPECT_SETUP org.eclipse.n4js.xpect.tests.N4JSXpectTest 
	IssueConfiguration {
		IssueCode "DFG_NULL_DEREFERENCE" {enabled=true}
	}
	END_SETUP
 */



function f1() {
	let a : int;

	let f = () => {
		a = null;
	};
	f;

	// XPECT warnings --> "Variable a may be undefined" at "a"
	a.toString();
}

function f2() {
	let a : int;

	let f = () => {
		[a] = [null];
	};
	f;

	// XPECT warnings --> "Variable a may be undefined" at "a"
	a.toString();
}

function f3() {
	let a : int;

	let f = () => {
		// XPECT warnings --> "Unnecessary cast from undefined to int" at "undefined as int"
		({a} = {a:undefined as int});
	};
	f;

	// XPECT warnings --> "Variable a may be undefined" at "a"
	a.toString();
}

function f4() {
	let a : int;

	let f = () => { for (a of [0]) {} }
	f;

	// XPECT warnings --> "Variable a may be undefined" at "a"
	a.toString();
}

function f5() {
	let a : int;

	let f = () => { for ([a] of [[0]]) {} }
	f;

	// XPECT warnings --> "Variable a may be undefined" at "a"
	a.toString();
}
