//========= ... shadow catch variable (allowed as IDEBUG-192)
(function () {
	try {
		throw '3';
	} catch(x) {
		// XPECT errors --> "Variable x duplicates catch variable x (line 148)." at "x"
		var x = 101;
	}
})();

(function () {
	var x = 2;
	try {
		throw '3';
		// XPECT noerrors --> "Catch variable x duplicates variable x (line 144)." at "x"
	} catch(x) {
		console.log(x);
	}
})();



