import {AbstractN4jsdGeneratorTest} from "AbstractN4jsdGeneratorTest";

export public class SomeTest extends AbstractN4jsdGeneratorTest {

	@Test
	public testConvertProject() {
		this.createPackageJson("input", "test_project");
		this.createFile("input/test_project/TestModule.d.ts", `
			export class Buffer {}
		`);
		const root = this.getTestFolder();
		this.runN4jsdGen("-o", root + "/output", root + "/input/test_project");
		this.assertFileContent("output/@n4jsd/test_project/TestModule.n4jsd",`
			export external class ~Buffer {
			}
		`);
	}
}
