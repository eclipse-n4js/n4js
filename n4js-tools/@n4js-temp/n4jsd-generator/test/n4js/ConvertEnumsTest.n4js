import {AbstractN4jsdGeneratorTest} from "AbstractN4jsdGeneratorTest";

export public class ConvertEnumsTest extends AbstractN4jsdGeneratorTest {

	@Test
	public testOrdinaryEnums() {
		this.assertConversion(
			{
				name: "main",
				dts: `
					export enum EnumOrdinary {
						RED, GREEN, BLUE
					}
				`,
				n4jsd: `
					export external enum EnumOrdinary {
						RED,
						GREEN,
						BLUE
					}
				`
			}
		);
	}

	@Test
	public testConstEnums() {
		this.assertConversion(
			{
				name: "main",
				dts: `
					export const enum EnumStringBased {
						LIT1 = 'lit1', LIT2 = 'lit2'
					}
					export const enum EnumNumberBased {
						LIT1 = -1, LIT2
					}
					export const enum EnumNumberBasedViaDefault {
						LIT1, LIT2
					}
				`,
				n4jsd: `
					@StringBased
					export external enum EnumStringBased {
						LIT1: 'lit1',
						LIT2: 'lit2'
					}

					@NumberBased
					export external enum EnumNumberBased {
						LIT1: -1,
						LIT2: 0
					}

					@NumberBased
					export external enum EnumNumberBasedViaDefault {
						LIT1: 0,
						LIT2: 1
					}
				`
			}
		);
	}
}
