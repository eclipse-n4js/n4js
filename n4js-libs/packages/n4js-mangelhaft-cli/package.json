{
  "name": "n4js-mangelhaft-cli",
  "version": "0.1.0",
  "author": {
    "name": "NumberFour AG",
    "email": "npm@numberfour.eu"
  },
  "license": "EPL-1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/eclipse/n4js"
  },
  "description": "Node.js runner used to compile and launch the mangelhaft tests from command line.",
  "scripts": {
    "test": "./tests/npm-test.sh"
  },
  "bin": {
    "n4js-mangelhaft": "./bin/n4js-mangelhaft-cli.js"
  },
  "dependencies": {
    "n4js.lang": "^0.1.0",
    "org.eclipse.n4js.mangelhaft": "^0.1.0",
    "org.eclipse.n4js.mangelhaft.reporter.console": "^0.1.0",
    "org.eclipse.n4js.mangelhaft.reporter.xunit": "^0.1.0",
    "nomnom-patched": "~1.8.1",
    "glob": "~7.1.2",
    "n4js-cli": "^0.1.0",
    "cli-color": "~1.2.0"
  },
  "n4js": {
    "projectType": "library",
    "vendorId": "org.eclipse.n4js",
    "vendorName": "Eclipse N4JS Project",
    "output": "src-gen",
    "sources": {
      "source": [
        "src/n4js"
      ]
    },
    "requiredRuntimeLibraries": [
      "n4js-runtime-fetch",
      "n4js-runtime-es2015",
      "n4js-runtime-node"
    ],
    "moduleLoader": "n4js"
  },
  "devDependencies": {
    "n4js-runtime-fetch": "^0.1.0",
    "n4js-runtime-es2015": "^0.1.0",
    "n4js-runtime-node": "^0.1.0"
  }
}
